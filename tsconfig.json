{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "target": "ESNext",  
        "module": "ESNext",
        "strict": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react-jsx"
    }
}